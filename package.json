{
  "name": "visual-scxml-editor",
  "displayName": "Visual SCXML Editor",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/Phrogz/visual-scxml-editor.git"
  },
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "category": "SCXML Editor",
        "command": "visual-scxml-editor.showEditor",
        "title": "Open to the Side"
      },
      {
        "category": "SCXML Editor",
        "command": "visual-scxml-editor.createState",
        "title": "Add State"
      },
      {
        "category": "SCXML Editor",
        "command": "visual-scxml-editor.fitChildren",
        "title": "Expand State to Fit Children"
      },
      {
        "category": "SCXML Editor",
        "command": "visual-scxml-editor.undo",
        "title": "Undo"
      },
      {
        "category": "SCXML Editor",
        "command": "visual-scxml-editor.zoomToExtents",
        "title": "Zoom to Fit"
      },
      {
        "category": "SCXML Editor",
        "command": "visual-scxml-editor.zoomTo100",
        "title": "Zoom to 100%"
      },
      {
        "category": "SCXML Editor",
        "command": "visual-scxml-editor.toggleEventDisplay",
        "title": "Show/Hide Events"
      },
      {
        "category": "SCXML Editor",
        "command": "visual-scxml-editor.deleteNonDestructive",
        "title": "Delete Selection (Preserve Children + Incoming Transitions)"
      },
      {
        "category": "SCXML Editor",
        "command": "visual-scxml-editor.deleteDestructive",
        "title": "Delete Selection (Remove Children + Incoming Transitions)"
      }
    ],
    "menus": {
      "webview/context": [
        {
          "command": "visual-scxml-editor.deleteNonDestructive",
          "group": "scxmlstatemanipulation",
          "when":"visual-scxml-editor.anyStateSelected || visual-scxml-editor.anyTransitionSelected"
        },
        {
          "command": "visual-scxml-editor.createState",
          "group": "scxmlstatemanipulation"
        },
        {
          "command": "visual-scxml-editor.fitChildren",
          "group": "scxmlstatemanipulation",
          "when":  "visual-scxml-editor.anyParentSelected"
        },
        {
          "command": "visual-scxml-editor.zoomToExtents",
          "group": "scxmldisplay"
        },
        {
          "command": "visual-scxml-editor.zoomTo100",
          "group": "scxmldisplay"
        },
        {
          "command": "visual-scxml-editor.toggleEventDisplay",
          "group": "scxmldisplay"
        }
      ],
      "commandPalette": [
        {
          "command": "visual-scxml-editor.showEditor",
          "when": "editorLangId == xml"
        },
        {
          "command": "visual-scxml-editor.createState",
          "when": "visual-scxml-editor.visualEditorActive"
        },
        {
          "command": "visual-scxml-editor.fitChildren",
          "when": "visual-scxml-editor.anyParentStateSelected && visual-scxml-editor.visualEditorActive"
        },
        {
          "command": "visual-scxml-editor.zoomToExtents",
          "when": "visual-scxml-editor.visualEditorActive"
        },
        {
          "command": "visual-scxml-editor.zoomTo100",
          "when": "visual-scxml-editor.visualEditorActive"
        },
        {
          "command": "visual-scxml-editor.toggleEventDisplay",
          "when": "visual-scxml-editor.visualEditorActive"
        },
        {
          "command": "visual-scxml-editor.deleteNonDestructive",
          "when": "visual-scxml-editor.visualEditorActive"
        },
        {
          "command": "visual-scxml-editor.deleteDestructive",
          "when": "visual-scxml-editor.visualEditorActive"
        },
        {
          "command": "visual-scxml-editor.undo",
          "when": "false"
        }
      ]
    },
    "keybindings": [
      {
        "command": "visual-scxml-editor.undo",
        "key": "ctrl+z",
        "mac": "cmd+z",
        "when": "visual-scxml-editor.visualEditorActive"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.12",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  }
}
